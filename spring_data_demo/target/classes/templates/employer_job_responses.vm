						<th>NAME</th>
						<th>EMAIL</th>
						<th>UNIVERSITY NAME</th>
						<th>LINKEDIN URL</th>
						<th>GPA</th>
						<th>CURRENT STATUS</th>
						<th>ACTIONS</th>
					</tr>
				</thead>
				<tbody>
					#foreach ($candidate in $appliedCandidates)
